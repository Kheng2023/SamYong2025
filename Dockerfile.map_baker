FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY map_baker/ /app/map_baker/
# Copy static files if they exist
COPY map_baker/static/ /app/static/

EXPOSE 8000

CMD ["uvicorn", "map_baker.app:app", "--host", "0.0.0.0", "--port", "8000"]